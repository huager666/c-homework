#include <iostream>

using namespace std;

void find(int* num, int n, int& minIndex, int& maxIndex);
int main()
{
    int t = 0;
    cin >> t;
    for (int count = 0; count < t; count++)
    {
        int n = 0;
        cin >> n;
        int* num = new int[n];
        int min = 0;
        int max = 0;
        int minIndex = 0;
        int maxIndex = 0;
        
        for (int i = 0; i < n; i++)
        {
            cin >> *(num + i);
        }
        find(num,n, minIndex,  maxIndex);

        cout << "min="<<*(num+minIndex) << " " << "minindex=" <<minIndex<< endl;
        cout << "max=" << *(num + maxIndex) << " " << "maxindex=" << maxIndex << endl;
        cout << endl;
    }

}


void find(int* num, int n, int& minIndex, int& maxIndex)
{
    int max = *num;
    int min = *num;
    for (int i = 0; i < n-1; i++)
    {
        if (*(num + i+1) > max)
        {
            max = *(num + i + 1);
        }

       
    }
    for (int i = 0; i < n-1; i++)
    {
        

        if (*(num + i + 1) <min)
        {
            min = *(num + i + 1);
        }

    }

    for (int i = 0; i < n; i++)
    {
        if (*(num + i ) ==max)
        {
            maxIndex = i;
            break;
        }


    }

    for (int i = 0; i < n; i++)
    {
        if (*(num + i) == min)
        {
            minIndex = i;
            break;
        }


    }
}
